    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Docker 
                "ms-azuretools.vscode-docker",
                // TeX & Friends
                "james-yu.latex-workshop",
                "streetsidesoftware.code-spell-checker",
                // Git
                "eamodio.gitlens",
                // Julia
                "julialang.language-julia",
